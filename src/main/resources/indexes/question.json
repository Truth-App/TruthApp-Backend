{
  "settings": {
    "analysis": {
      "filter": {
        "autocomplete_filter": {
          "type": "edge_ngram",
          "min_gram": 1,
          "max_gram": 20
        }
      },
      "analyzer": {
        "autocomplete": { 
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "autocomplete_filter"
          ]
        }
      }
    }
  },
    "mappings": {
      "properties": {
        "search_field":{
          "type": "text",
          "analyzer": "autocomplete", 
          "search_analyzer": "standard"
        },
        "search_nested_field":{
          "type": "text",
          "analyzer": "autocomplete", 
          "search_analyzer": "standard"
        },
        "id":{
        "type": "text"
        },
        "question":{
         "type": "text",
         "analyzer": "autocomplete", 
         "search_analyzer": "standard",
         "copy_to": "search_field"
        },
        "questionType":{
          "type": "text"
        },
        "category":{
          "type": "text"
        },
        "score":{
          "type": "long"
        },
        "isPublic":{
          "type": "boolean"
        },
        "isApproved":{
          "type": "boolean"
        },
        "responses":{
          "type": "nested",
          "properties": {
            "id":{
              "type": "text"
            },
            "response":{
              "type": "text"
            },
            "responderId":{
             "type": "text",
             "analyzer": "autocomplete", 
             "search_analyzer": "standard",
             "copy_to": "search_field"
            },
            "isApproved":{
             "type": "boolean"
            },
            "score":{
             "type": "long"
            },
            "isPublic":{
              "type": "boolean"
            }
          }
        }
      }  
    }
}